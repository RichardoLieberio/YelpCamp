<%- layout("./templates/boilerplate") %>
<h1><%= campground.name %></h1>

<div class="container">
    <div class="row">
        <div class="col-sm">
            <div class="card">
                <img class="card-img-top .bg-secondary" src="data:image/jpeg;base64," alt="Campground images">
                <div class="card-body">
                    <p class="card-text"><%= campground.description %></p>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item p-0">
                            <div class="d-flex justify-content-between">
                                <p><%= campground.location %></p>
                                <p>$ <%= campground.price %></p>
                            </div>
                        </li>
                        <li class="list-group-item p-0 mt-3">
                            <form action="/campgrounds/<%= campground._id %>?_method=delete" method="post" class="d-flex justify-content-end align-items-center">
                                <a href="/campgrounds/<%= campground._id %>/edit" class="card-link">Edit</a>
                                <button class="btn btn-danger ms-3">Delete</button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-sm">
            <form action="/campgrounds/<%= campground._id %>/review" method="post" autocomplete="off">
                <div class="form-group mb-3">
                    <label class="form-label" for="rating">Add review</label>
                    <input type="range" class="form-range" min="1" max="5" step="1" id="rating" name="rating">
                </div>
                <div class="form-group mb-3">
                    <label class="form-label" for="review">Add review</label>
                    <textarea class="form-control" rows="5" name="review" id="review" placeholder="Write your review"></textarea>
                </div>
                <button type="submit" class="btn btn-primary w-100">Submit</button>
            </form>
            <div class="card mt-3">
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item p-0 d-flex justify-content-between">
                            <h5 class="card-title">All Reviews</h5>
                            <% if(campground.overAllRating == 0) { %>
                                <p>No Rating</p>
                            <% } else { %>
                                <p>Rating <%= campground.overAllRating %></p>
                            <% } %>
                        </li>
                        <% if(campground.reviewsId.length) { %>
                            <% campground.reviewsId.reverse() %>
                            <% campground.reviewsId.forEach(function(review) { %>
                                <li class="list-group-item p-0 pt-3 pb-3">
                                    <h6 class="card-subtitle mb-2">Rating: <%= review.rating %></h6>
                                    <p class="card-text"><%= review.review %></p>
                                </li>
                            <% }) %>
                        <% } else { %>
                            <li class="list-group-item p-0 pt-3 pb-3">
                                <h6 class="card-subtitle mb-2 text-muted">No review yet</h6>
                            </li>
                        <% } %>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>